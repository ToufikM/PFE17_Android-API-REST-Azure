<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cloudshot.toufik.cloudshot.EditionPhoto"
    android:background="#ff000000">

    <ImageView
        android:id="@+id/image_modifier_supprimer"
        android:contentDescription="@string/image_cd_camera"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="300dp" />

    <EditText
        android:id="@+id/nomPhoto_modifier_supprimer"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:hint="@string/nomPhotoAjouter"
        android:textColorHint="#ffffffff"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:backgroundTint="#ffffffff"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:layout_below="@+id/image_modifier_supprimer"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/lieuPhoto_modifier_supprimer"
        android:layout_marginTop="5dp"
        android:layout_width="250dp"
        android:hint="@string/nomPhotoAjouter"
        android:textColorHint="#ffffffff"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:backgroundTint="#ffffffff"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:layout_below="@+id/nomPhoto_modifier_supprimer"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btnConfirmModification"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_below="@id/lieuPhoto_modifier_supprimer"
        android:text="OK"
        android:backgroundTint="#ffffffff"
        android:background="#ffffffff"
        android:onClick="confirmModifPhotoOnClick" />

    <Button
        android:id="@+id/btnConfirmSuppresson"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/lieuPhoto_modifier_supprimer"
        android:text="Supprimer"
        android:backgroundTint="#ffffffff"
        android:background="#ffffffff"
        android:onClick="confirmSuppPhotoOnClick" />

</RelativeLayout>
