<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ciel"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_msgErrorNetwork"
        android:textColor="#ffff0c0b"
        android:text=""
        android:layout_above="@+id/btnInscriptionA"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:text="@string/boutonConnexion_id"
        android:id="@+id/btn_connexion"
        android:onClick="connexionOnClick"
        android:textColor="#ffff0010"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:text="@string/btn_Inscription"
        android:id="@+id/btnInscriptionA"
        android:onClick="inscriptionOnClick"
        android:layout_marginRight="50dp"
        android:textColor="#ffff0010"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgWellcome"
        android:src="@drawable/dessin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
